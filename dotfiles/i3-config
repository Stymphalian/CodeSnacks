# Pulse Audio controls/ sound / volume controls
set $sound_channel `pactl list sinks short | grep RUNNING | awk '{print $1}'`
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume $sound_channel +4% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume $sound_channel -4% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $sound_channel  toggle # mute sound
